.sign-in-form
  = render 'layouts/messages'
  %h2 Change your password
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put ,:id =>"new_user"}) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-inputs
      = f.input :password, label: false, placeholder: "New password", required: true, autofocus: true
      = f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true
    .form-actions
      = f.button :submit, "Change my password", :class => "btn-submit"